USE world;

SELECT Name, District FROM city;

SELECT * FROM city
WHERE CountryCode = 'RUS'
ORDER BY Name;

SELECT * FROM city
WHERE CountryCode IN('ESP', 'GRC', 'PRT')
ORDER BY Name DESC;

SELECT * FROM city
WHERE Population BETWEEN 300000 AND 500000;

SELECT * FROM city
WHERE Name LIKE 'A%';

SELECT * FROM city
WHERE Name LIKE '%A%';